<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
    <!--<item name="colorAccent">@color/colorPrimary</item>-->

    <item name="android:textColorPrimary">@color/white</item>
    <item name="editTextColor">@color/gray</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="textColor">@color/textColor</item>
    <item name="infoTextColor">@color/infoTextColor</item>
    <item name="layout_bg_normal">@color/layout_bg_normal</item>
    <item name="lineColor">@color/line_color</item>
    <item name="windows_bg">@color/windows_bg</item>
    <item name="layout_item_bg">@drawable/list_item_background</item>
    <item name="android:editTextColor">@color/edit_color</item>
    <item name="android:textColorHint">@color/edit_hit_color</item>
    <item name="android:windowAnimationStyle">@style/activityTransitions</item>
  </style>

  <style name="activityTransitions" parent="@android:style/Animation">
    <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
    <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
    <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
    <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
  </style>
