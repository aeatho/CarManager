<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/layout_bg_normal"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="86dp"
        android:padding="20dp"
        android:src="@mipmap/depic"/>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="86dp"
        android:padding="15dp">

      <TextView
          android:id="@+id/FriName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="名字"
          android:textColor="@color/text_dark"
          android:textSize="16sp"/>

      <TextView
          android:id="@+id/tel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/FriName"
          android:layout_marginTop="4dp"
          android:text="电话"
          android:textColor="#9a9b9f"
          android:textSize="13sp"/>

      <TextView
          android:id="@+id/trucklicense"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:text="车牌号"
          android:textColor="@color/main_grey_dark"
          android:textSize="14sp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

      <LinearLayout
          android:id="@+id/location"
          android:layout_width="wrap_content"
          android:gravity="center"
          android:paddingLeft="8dp"
          android:background="@drawable/list_item_background"
          android:paddingRight="8dp"
          android:layout_height="match_parent">
      <TextView
          android:layout_width="28dp"
          android:layout_height="28dp"
          android:background="@drawable/ic_location"/>
      </LinearLayout>

      <RelativeLayout
          android:id="@+id/msg"
          android:layout_width="wrap_content"
          android:gravity="center"
          android:paddingLeft="8dp"
          android:background="@drawable/list_item_background"
          android:paddingRight="8dp"
          android:layout_height="match_parent">
        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_msg"/>

        <TextView
            android:id="@+id/redPoint"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/shape_red_circle"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="@color/white"/>
      </RelativeLayout>

    </LinearLayout>
  </LinearLayout>

</LinearLayout>