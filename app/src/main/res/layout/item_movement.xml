<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/list_item_background"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:src="@mipmap/pic_dri"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp">

      <TextView
          android:id="@+id/Movement_Title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Title"
          android:textColor="@color/text_dark"
          android:textSize="16sp"/>

      <TextView
          android:layout_marginTop="8dp"
          android:id="@+id/movement_Place"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/Movement_Title"
          android:drawablePadding="5dp"
          android:drawableStart="@mipmap/place_icon"
          android:text="活动地点"
          android:textColor="#9a9b9f"
          android:textSize="14sp"/>

      <TextView
          android:layout_marginTop="4dp"
          android:id="@+id/movement_Time"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/movement_Place"
          android:drawablePadding="5dp"
          android:drawableStart="@mipmap/movement_time"
          android:text="活动时间"
          android:textColor="#9a9b9f"
          android:textSize="14sp"/>

    </RelativeLayout>
  </LinearLayout>

</LinearLayout>