<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ccp_root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:contentDescription="chatting_activity"
    android:orientation="vertical">

  <ListView
      android:id="@+id/chatting_history_lv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@null"
      android:cacheColorHint="#00000000"
      android:divider="@null"
      android:layout_above="@+id/inputBar"
      android:listSelector="@drawable/list_item_background"
      android:scrollbarStyle="outsideOverlay"
      android:scrollbars="vertical"
      android:scrollingCache="false"/>

  <com.unovo.carmanager.ui.chat.input.InputBar
      android:id="@+id/inputBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"/>


</RelativeLayout>